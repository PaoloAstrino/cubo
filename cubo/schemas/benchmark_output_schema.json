{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CUBO Benchmark Run Schema",
  "type": "object",
  "required": ["metadata", "results"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["test_run_timestamp", "mode", "total_questions", "hardware"],
      "properties": {
        "test_run_timestamp": {"type": "number"},
        "mode": {"type": "string"},
        "total_questions": {"type": "integer"},
        "success_rate": {"type": "number"},
        "hardware": {
          "type": "object",
          "properties": {
            "cpu": {"type": "object", "properties": {"model": {"type": "string"}}},
            "ram": {"type": "object", "properties": {"total_gb": {"type": "number"}}},
            "gpu": {"type": ["object", "null"]}
          }
        },
        "questions_by_difficulty": {"type": "object"}
      }
    },
    "results": {
      "type": "object",
      "properties": {
        "easy": {"type": "array"},
        "medium": {"type": "array"},
        "hard": {"type": "array"}
      }
    }
  }
}
